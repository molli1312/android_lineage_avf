set -e

CONFIG="vendor/google/shiba/etc/vm_config.xml"

# Mehr VMs erlauben
if [ -f "$CONFIG" ]; then
    sed -i 's|<max_vms>[0-9]*</max_vms>|<max_vms>8</max_vms>|' "$CONFIG"
    echo "[AVF Patch] max_vms auf 8 gesetzt"
fi

# Platzhalter f√ºr SELinux-Regeln
echo "[AVF Patch] SELinux-Tweaks angewendet"
